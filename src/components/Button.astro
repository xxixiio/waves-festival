---
const { as, content, ...props } = Astro.props;
const Tag = as;
---

<Tag class:list={"button__container"} {...props}>
    {content}
</Tag>

<style>
    .button__container {
        background-color: #fff;
        border: solid 2px #fff;
        color: #000;
        border-radius: var(--border-radius);
        cursor: pointer;
        padding: 8px 20px;
        transition: all .1s ease-in;

        &:hover {
            background-color: #00000041;
            color: #fff;
        }
    }
</style>